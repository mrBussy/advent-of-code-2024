{
    "name": "rust-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/rust:latest",
    "postCreateCommand": ["rustc --version", "cargo install aoc-cli"],
    "postAttachCommand": "cargo update",
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "github.vscode-github-actions",
                "EditorConfig.EditorConfig",
                "vadimcn.vscode-lldb"
            ]
        }
    }
}
